@inject IJSRuntime JS
@inherits LayoutComponentBase
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> L

<div class="container-fluid p-0">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
        <div class="container">
            <a class="navbar-brand" href="#hero">@L["NavMenu_BackToTop"]</a>

            <button class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarNav"
                    aria-controls="navbarNav"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <div class="navbar-nav ms-auto">
                    <a class="nav-link" href="#about">@L["Nav_About"]</a>
                    <a class="nav-link" href="#techstack">@L["Nav_TechStack"]</a>
                    <a class="nav-link" href="#projects">@L["Nav_Projects"]</a>
                    <a class="nav-link" href="#contact">@L["Nav_Contact"]</a>

                    <button class="btn btn-dark" @onclick='() => ChangeLanguage("en-US")'>
                        <img class="nav-lang" src="images/gb_flag_logo.svg" alt="English" />
                    </button>
                    <button class="btn btn-dark" @onclick='() => ChangeLanguage("fi-FI")'>
                        <img class="nav-lang" src="images/fi_flag_logo.svg" alt="Finnish" />
                    </button>

                </div>
            </div>

        </div>
    </nav>

    <main>
        <div>
            @Body
        </div>
    </main>
</div>

@code {
    async Task ChangeLanguage(string culture)
    {
        await JS.InvokeVoidAsync("cultureManager.set", culture);
    }
}